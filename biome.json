{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			},
			"nursery": {
				"useSortedClasses": "error"
			},
			"style": {
				"noParameterAssign": "off"
			}
		}
	},
	"files": {
		"ignore": ["package.json", "build"]
	}
}
